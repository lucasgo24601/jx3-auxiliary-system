<Window x:Class="DisplayMessage.AnnounceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="500" Height="100" ShowInTaskbar="False" Topmost="True" WindowStartupLocation="Manual" Background="{x:Null}" WindowStyle="None" AllowsTransparency="True" Left="500" Top="200">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Padding="0" TextWrapping="Wrap" Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}" Foreground="{Binding MessageBrush, UpdateSourceTrigger=PropertyChanged}" FontSize="72" FontFamily="Microsoft YaHei UI"/>
    </Grid>
</Window>
